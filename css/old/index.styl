@import './mixin'
@import './theme'

.viewport
  position: relative
  
  > *:not(.active)
    display: none
    
body, html
  margin: 0;
  padding: 0;
  width: 100%
  height: 100%
  overflow: hidden

body
  vbox()

#lightbox
  display: none
  position: absolute
  top: 0px
  left: 0px
  background-color: #333
  opacity: 0.3
  width: 100%
  height: 100%
  .box
    position: absolute
    top: 25%
    left: 25%
    height: 40%
    width: 40%
    
.error_box
  padding: 0px 30px
  h4
    color: red

header#header
  overflow: hidden;
  height: 50px;
  border-box()
  inset-box-shadow(0px, -1px, 3px, #1d1d1d)
  vbg-gradient( #474747, #303030)


header#header h1
  line-height: 50px;
  float: left;
  padding: 0 20px;
  font-size: 18px;
  margin: 0;
  color: #FFF;
  border-right: 1px solid #181818;
  box-shadow(1px, 0px, 1px, #525252)
  text-shadow: 0 -1px 1px black;
  font-weight: bold;

#article
  box-flex(1)
  vbox()
  height: 100%
  overflow: auto

#article .pedidos
  box-flex(1)
  hbox()
  height: 100%
  overflow: hidden
  
  .sidebar
    width: 300px;
    height: 100%
    overflow: scroll
    vbox()
    
    header
      padding: 6px 7px 5px 7px;
      border: 1px solid #c5c5c5;
      border-width: 1px 0 1px 0;
      background: #ffffff;
      vbg-gradient(#ffffff, #dedfe0)
      .tab
        button
          width: 48%
      .search  
        margin-top: 3px
        input
          font-size: 30px;
          display: inline-block
          &.digit
            width: 52px
          &.code
            width: 95px
          &.name
            width: 130px
      
    .items
      box-flex(1)
      height: 100%
      overflow: scroll
    
    .item
      padding: 7px 15px      
      border-bottom: 1px solid #d2d2d1;
      color: #333;
      ellipsis()
      white-space: normal
      line-height: 0.8em
      
      .title
        display: block
        font-size: 14px
        line-height: 16px
        color: #333
      
      .info
        display: block 
        font-size: 11px
        color: #999
        letter-spacing: -0.1em

        span
          display: inline-block
          margin-left: 5px
          margin-right: 5px

          font-size: 14px
          color: #000
          letter-spacing: 0.1em
      
      &.active
        color: #ffffff;
        text-shadow: 0 -1px 1px #46677f;
        vbg-gradient( #7bb5db, #4775b8)
        border-bottom-color: #609fd0;
        inset-box-shadow(0, 2px, 2px, #4775b8)
        
    footer
      padding: 6px;
      border-top: 1px solid #c5c5c5;
      vbg-gradient(#ffffff, #dedfe0)
      box-shadow(0, -1px, 2px, rgba(0, 0, 0, 0.1))
      text-align: right;
  
  .main
    vbox()
    box-flex(1)
    height: 100%
    overflow: scroll
    padding-bottom: 25px
    
   footer
     margin: 9px

    header
      color: #333333;
      font-weight: bold;
      text-shadow: 0 1px 1px #ffffff;
      font-size: 14px;
      border-bottom: 1px solid rgba(0, 0, 0, 0.3);
      vbg-gradient(#ffffff, #e0e0e1)
      box-shadow(1px, 1px, 2px, rgba(0, 0, 0, 0.1))
      overflow: hidden
    
      a
        float: left;
        line-height: 30px;
        height: 30px;
        padding: 0 20px;
        cursor: pointer;
        border-right: 1px solid rgba(0, 0, 0, 0.3);
        text-decoration: none
       
        &:active
          background: #dadada;
          inset-box-shadow(0, 0, 10px, #9c9c9c)
      &.edit
        a
          float:  right;

      img
        float: left
        margin: 5px 0px 0px 4px

      h2
       display: inline-block
       margin: 0px   
       padding: 5px 15px
       font-size: 15px

    .content
      box-flex(1)
      inset-box-shadow(1px, 2px, 2px, rgba(0, 0, 0, 0.1))
      padding: 20px;
      -webkit-user-select: text;
      input.error
        outline-color: red
      textarea
        width: 350px
      
      .list
        vbox()
        .item
          hbox()
          font-size: 19px
          text-shadow: 0 -1px 1px #fdfdfd
          height: 50px
          padding: 0px 15px 0px 0px
          line-height: 50px
          border-bottom: 1px solid #d2d2d1;
          color: #333;
          ellipsis()

          &.active
            color: #ffffff;
            text-shadow: 0 -1px 1px #46677f;
            vbg-gradient( #7bb5db, #4775b8)
            border-bottom-color: #609fd0;
            inset-box-shadow(0, 2px, 2px, #4775b8)            
          
          p
            box-flex(1)
            margin: 0px
            font-size: 14px
          span
            display: inline-block
            width: 95px
            margin-right: 8px
            font-size: 15px
            &.total
              width: 100%
              text-align: right
              display: block
              font-size: 18px
              font-weight: bold
          input
            box-flex(4)
            width: 75px
            border-radius(8px)
            padding: 5px 3px
            margin: 3px
            font-size: 16px
            &.integer
              width: 40px
          button
            margin: 0px 5px